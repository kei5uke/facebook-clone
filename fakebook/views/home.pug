doctype html
head
  link(rel='stylesheet' type='text/css' href='/stylesheets/stylesheet.css')
  title Fakebook
.top_menu
  menu
    li
      a(href='/') Home
    li
      a(href='/friend') Friend
    li
      a(href='/mypage') My Page
.posts(id = 'home_posts')
  //- .post
  //-   .user_info
  //-     img(src='/images/user_pic.png' alt='userpic')
  //-     |             Mrs.Crocodile &nbsp;
  //-     span.post_time 2022-Jun-5
  //-   .post_info
  //-     p Take a look at my make up bitches.
  
  for post in posts
    .post(id = 'post')
      .user_info
        img(src='/images/user_pic.png' alt='userpic')
        |             #{post.un} &nbsp;
        span.post_time #{post.time}
      .post_info
        p #{post.post}
      
  if message
    .post(id = 'post')
      .user_info
        img(src='/images/user_pic.png' alt='userpic')
        |             Your Friend &nbsp;
      .post_info
        p #{message}

button.open-button(onclick='openPost()') CREATE POST
#FormPost.form-popup
  form.form-post(action='/create_post' method='post')
    label(for='post')
      b Write HERE!
    input(type='text' placeholder="What's on your mind?" name='post' required='')
    button.btn(type='submit' onclick='closePost()') POST
    button.btn.cancel(type='button' onclick='closePost()') Close

